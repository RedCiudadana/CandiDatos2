<div class="row m-1 bg-white panel">
  {{!-- Imagen --}}
  <div class="col-md-3 text-center p-3">
    <img
      id="photo-profile"
      src={{model.profile.fotoPerfil}}
      alt={{model.profile.nombre}}
      border="0"
      class="img-responsive center-block"
    >
  </div>
  {{!-- Información general --}}
  <div class="col-md-6 p-3">
    <h3>{{model.profile.nombre}}</h3>
    <table class="table w-75">
      <tbody>
        <tr>
          <td class="p-0 border-top-0">
            <small>
              <strong>Partido: </strong>{{currentParty.nombreCompleto}}
            </small>
          </td>
        </tr>
        <tr>
          <td class="p-0">
            <small>
              <strong>Edad: </strong>{{profile.edad}}
            </small>
          </td>
        </tr>
        <tr>
          <td class="p-0">
            <small>
              <strong>Estado civil: </strong>{{profile.estadoCivil}}
            </small>
          </td>
        </tr>
        <tr>
          <td class="p-0">
            <small>
              <strong>Años de ejercicio profesional: </strong>{{profile.anosProfesional}}
            </small>
          </td>
        </tr>
        <tr>
          <td class="p-0">
            <small>
              <strong>No. de colegiado: </strong>{{profile.numeroColegiado}}
            </small>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
  {{!-- Información extra, redes sociales --}}
  <div class="col-md-3 social-side text-center d-block p-3">
    <img src={{model.currentParty.logo}} alt={{model.currentParty.nombreCorto}} class="foto-partido">
    <div class="d-block mt-3">
      <div>
        <a href={{model.profile.tw}} target="_blank" rel="noopener">
          <img src="img/icono-tw.png" alt="Twitter">
          {{model.profile.tw}}
        </a>
      </div>
      <div>
        <a href={{model.profile.fb}} target="_blank" rel="noopener">
          <img src="img/icono-fb.png" alt="Facebook">
          {{model.profile.nombre}}
        </a>
      </div>
    </div>
  </div>
</div>

<div class="row">
  {{!-- Biografía --}}
  <div class="col-md-12">
    <div class="panel">
      <div class="header d-flex">
        <img src="img/icono-biografia.png" alt="Biografía">
        <h3>Biografía</h3>
      </div>
      <div class="body">
        <p>
          {{availableInfo.biography}}
        </p>
      </div>
    </div>
  </div>
</div>

<div class="row">
  {{!-- 3 de 3 --}}
  <div class="col-md-12">
    <div class="panel">
      <div class="header d-flex">
        <img src="img/icono-3-de-3.png" alt="3 de 3">
        <h3>3 de 3</h3>
      </div>
      <div class="body">
        <div class="row">
          <div class="col-12 col-md-4 my-2 text-center">
            <button class="btn btn-warning btn-square text-white">
              <img src="img/icono-cv.png" alt="Icono CV" height="60px">
              CV
            </button>
          </div>
          <div class="col-12 col-md-4 my-2 text-center">
            <button class="btn btn-success btn-square text-white">
              <img src="img/icono-finiquito.png" alt="Icono Finiquito" height="60px">
              Finiquito
            </button>
          </div>
          <div class="col-12 col-md-4 my-2 text-center">
            <button class="btn btn-primary btn-square text-white">
              <img src="img/icono-patrimonio.png" alt="Icono Patrimonio" height="60px">
              Patrimonio
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="row mb-0 pb-0">
  <div class="col-12">
    <div class="panel">
      <div class="header d-flex">
        <img src="img/icono-historial.png" alt="Historial Político">
        <h3>Historial Político</h3>
      </div>
    </div>
  </div>
</div>

<div class="row">
  {{!-- Años --}}
  <div class="col-md-6">
    <div class="panel">
      <div class="header d-flex bg-secondary" {{action (toggle "years" this)}}>
        <img src="img/icono-años.png" alt="Icono años">
        <h3>Años</h3>
        {{fa-icon "chevron-circle-down" size=2 class="my-auto ml-auto"}}
      </div>
      <div class="body">
        {{#bs-collapse collapsed=years}}
          <p>Mostrar años aquí.{{availableInfo.year}}</p>
        {{/bs-collapse}}
      </div>
    </div>
  </div>
  {{!-- Cargo --}}
  <div class="col-md-6">
    <div class="panel">
      <div class="header d-flex bg-secondary" {{action (toggle "charge" this)}}>
        <img src="img/icono-cargo.png" alt="Icono cargo">
        <h3>Cargo</h3>
        {{fa-icon "chevron-circle-down" size=2 class="my-auto ml-auto"}}
      </div>
      <div class="body">
        {{#bs-collapse collapsed=charge}}
          <p>{{availableInfo.charge}}</p>
        {{/bs-collapse}}
      </div>
    </div>
  </div>
</div>

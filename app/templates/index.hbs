{{!-- Carousel --}}
{{#bs-carousel autoPlay="true" as |car|}}
  {{#car.slide}}
    <img alt="Paso 1" src="img/slider-1.png" height="auto" width="100%">
  {{/car.slide}}
  {{#car.slide}}
    <img alt="Paso 3" src="img/slider-3.png" height="auto" width="100%">
  {{/car.slide}}
{{/bs-carousel}}

<div class="container py-5">

  {{!-- Ember Power Select --}}
  <div class="row">
    <div class="col-12 text-center">
      <h5>¿Quiénes son los candidatos a la alcaldía de tu municipio?</h5>
      {{#power-select
        options=model
        selected=profile
        searchField="nombre"
        onchange=(action "toProfile")
      as |profile|}}
        <strong>{{profile.nombre}}</strong>
      {{/power-select}}
    </div>
  </div>

  {{!-- Filters --}}
  <div class="row filters">
    <div class="col-12 text-center">
      {{!-- Tipo --}}
      {{#bs-dropdown class="m-2 rounded" as |dd|}}
        {{#dd.button class="bg-light btn-light"}}Tipo de elección<span class="caret"></span>{{/dd.button}}
        {{#dd.menu as |menu|}}
          {{#menu.item}}
            <label>
              <input type="checkbox" checked={{president}} onclick={{queue (action (mut president) value="target.checked") (action "backToPageOne")}}>
              <img src="img/icono-president.png" alt="Elección presidencial">
              Presidencial
            </label>
          {{/menu.item}}
          {{#menu.item}}
            <label>
              <input type="checkbox" checked={{mayor}} onclick={{queue (action (mut mayor) value="target.checked") (action "backToPageOne")}}>
              <img src="img/icono-mayor.png" alt="Elección municipal">
              Municipal
            </label>
          {{/menu.item}}
          {{#menu.item}}
            <label>
              <input type="checkbox" checked={{distrito}} onclick={{queue (action (mut distrito) value="target.checked") (action "backToPageOne")}}>
              <img src="img/icono-deputie.png" alt="Elección diputados del listado nacional">
              Diputados distrito
            </label>
          {{/menu.item}}
          {{#menu.item}}
            <label>
              <input type="checkbox" checked={{listado}} onclick={{queue (action (mut listado) value="target.checked") (action "backToPageOne")}}>
              <img src="img/icono-deputie.png" alt="Elección diputados del listado nacional">
              Diputados listado nacional
            </label>
          {{/menu.item}}
          {{#menu.item}}
            <label>
              <input type="checkbox" checked={{parlacen}} onclick={{queue (action (mut parlacen) value="target.checked") (action "backToPageOne")}}>
              <img src="img/icono-parlacen.png" alt="Elección diputados del parlacen">
              Diputados parlacen
            </label>
          {{/menu.item}}
        {{/dd.menu}}
      {{/bs-dropdown}}
    </div>
  </div>

</div>

<div class="container-fluid bg-light py-4">

  {{!-- Portofolio --}}
  <div class="row">
    <div class="col-10 offset-1">
      <div id="portfolio" class="portfolio clearfix my-4">
        {{#each pagedContent as |profile|}}
          <article class="item {{profile.selector}}">
            <div class="background bg-white">

              <div class="image">
                {{#link-to "perfil" profile.typeCommonName profile.id}}
                  <img alt={{profile.cargoNombreCompleto}} src={{profile.fotoPerfil}}>
                {{/link-to}}
              </div>

              <div class="text">
                <h6>{{profile.nombre}}</h6>
                <h6 class="font-weight-light">{{profile.electionName}}</h6>
              </div>

              <div class="image-party">
                <img src={{profile.partido.logo}} alt={{profile.partido.nombreCorto}}>
              </div>

            </div>
          </article>
        {{/each}}
      </div>
    </div>
  </div>

  {{!-- Pagination numbers --}}
  <div class="row">
    <div class="col-4 offset-4 text-center">
      {{page-numbers content=pagedContent}}
    </div>
  </div>

</div>

<div class="container-fluid bg-dark justify-content-center py-5">
  {{!-- Fecha --}}
  <div class="row">
    <div class="col-md-4 text-center text-md-right">
